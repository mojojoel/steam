<div id="show-container" class="container-fluid" align="middle">
  <div class="row">
    <div class="btn-success"><h2><%= @listing.name %></h2></div>
    <div class="col-md-4"><%= image_tag @listing.picture %>
    </div>
    <div class="col-md 6" style="vertical-align:middle"><br><br><br><br><br>
      <div><strong>Game:</strong> <%= @listing.game %></div>
      <div><strong>Quality:</strong> <%= @listing.quality %></div>
      <div><strong>Desc:</strong> <%= @listing.desc %></div>
      <div><strong>Price:</strong> <%= number_to_currency(@listing.price, precision: 2) %></div>
      <div><strong>Seller:</strong> <%= @listing.user.nickname %></div>
    </div>
  </div>
</div>

<div align="center">
<% if current_user == @listing.user or current_user.admin? %>
<%= link_to 'Edit', edit_listing_path(@listing) %>
|<% end %>

<%= link_to 'Back', listings_path %>

<% if current_user == @listing.user or current_user.admin? %>| 
<%= link_to 'Destroy', @listing, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</div>
