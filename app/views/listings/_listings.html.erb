<% @listings.each do |listing| %>
<div class="col-md-4" id="listings" align="middle">
  <div class="row">
    <%= link_to image_tag(listing.picture, class: "img-responsive aspect"), listing %>
    <div class="row">
      <%= listing.name %>
    </div>
    <div class="row"><br>
      <div class="col-md-4 col-md-offset-2">
        <%= listing.game %>
      </div>
      <div class="col-md-4">

        <%= link_to edit_listing_path(listing), class: "btn btn-sm btn-info" do %>
          <i class="glyphicon glyphicon-shopping-cart"><%= number_to_currency(listing.price, precision: 2) %>
          <% if listing.approved? %>
              <span class="glyphicon glyphicon-ok"></span>
            <% end %></i>
        <% end %>
      </div>
    </div>
  </div>




</div>
<% end %>




