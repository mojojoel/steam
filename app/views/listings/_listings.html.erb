<% @listings.each do |listing| %>
<div class="col-md-4" id="listings" align="middle">
  <div class="row">
    <%= link_to image_tag(listing.picture, class: "img-responsive aspect"), listing %>
    <div class="row">
      <%= listing.name %>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <%= listing.game %>
      </div>
      <div class="col-md-4">
        <button type="button" class="btn btn-edit">

          <%= link_to '<span class="glyphicon glyphicon-arrow-left"></span> listing.price'.html_safe, edit_listing_path(listing) %></button>

        <% link_to (number_to_currency(listing.price, precision: 2)), edit_listing_path(listing) %>
      </div>
    </div>
  </div>


